<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CustomRatingBar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.neerajsingh.animationtrial.CustomRatingBar
        android:id="@+id/ratingBarTop"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        CustomRatingBar:numberOfStar="5"
        CustomRatingBar:setStarDrawable="@drawable/star_green"
        CustomRatingBar:resetStarDrawable="@drawable/star_black"
        />

    <TextView
        android:id="@+id/thanks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thanks! Tap again to change rating"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="#878787"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/write_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="Write a Review"
        android:textColor="#2874f0"
        android:textSize="14sp" />

</LinearLayout>